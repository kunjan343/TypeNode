{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "types": [
            "reflect-metadata"
        ],
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2018",
            "es2018.promise",
            "dom"
        ],
        "diagnostics": true,
        "listFiles": true,
        "allowUnreachableCode": false,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "test/**/*.ts",
        "src/generate.ts",
        "src/lib/generator/*.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
